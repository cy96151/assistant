<script type="text/javascript">
oTable = $('.table-sort').dataTable({
    "aaSorting": [[ 1, "desc" ]],//默认第几个排序
    "bStateSave": true,//状态保存
    "aoColumnDefs": [
      {"bVisible": false, "aTargets": [4]}, //控制列的隐藏显示
      {"orderable":false,"aTargets":[0,3]}// 制定列不参与排序
    ]
});

$("#gridtable tbody tr").click(function(e) {
    if ($(this).hasClass('row_selected')) {
        $(this).removeClass('row_selected');
        var aData = oTable.fnGetData(this);
        if (null != aData) {
            $("input[id='checkbox_"+aData[1]+"']").prop("checked",false);
        }
    } else {
        $(this).addClass('row_selected');
        var aData = oTable.fnGetData(this);
        if (null != aData) {
            $("input[id='checkbox_"+aData[1]+"']").prop("checked",true);
        }
    }
});

$("#gridtable tbody tr").dblclick(function() {
    var aData = oTable.fnGetData(this);
    if (null != aData) {
    	interviewCategory_add(aData[1]);
    }
});
function interviewCategory_add(interviewCategoryId){
    layer.open({
        type: 2,
        area: ['500px','300px'],
        fix: false, //不固定
        maxmin: true,
        shade:0.4,
        title: '面试类型设定',
        content: '../procedure/interviewCategory-edit.htm?interviewCategoryId='+interviewCategoryId,
        btn: '提交',
        btnAlign: 'c',
        btn1:function(index,layero){
        	var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
            iframeWin.formSubmit();
        }
    });
}

function interviewCategory_edit(){
    var checkRows = $("input[name='table_checkbox']:checked");
    if(checkRows.length==1){
        var interviewCategoryId=checkRows.val();
        interviewCategory_add(interviewCategoryId);
    }else{
        layer.msg("请选择一条信息", {icon: 5,time: 1000});
    }
}

function interviewCategory_del(){
    var checkRows = $("input[name='table_checkbox']:checked");
    if(checkRows.length==1){
        var interviewCategoryId=checkRows.val();
        layer.confirm('确认删除该类型?', {icon: 3, title:'确认删除'}, function(index){
              layer.close(index);
              $.post("delInterviewCategory.json",{"id":interviewCategoryId},function(result){
                  if(result.code=="1"){
                      layer.msg('success!',{icon:6});
                      location.replace('interviewCategory.htm?PageNo=1&PageSize=100');
                  }else{
                      layer.alert(result.codeDes, {icon: 5});
                      return;
                  }
              },"json");
        });
    }else{
        layer.msg("请选择一条信息", {icon: 5,time: 1000});
    }
}

function getTableContent(primaryKey,j){
    var nTrs = oTable.fnGetNodes();//fnGetNodes获取表格所有行，nTrs[i]表示第i行tr对象
    for(var i = 0; i < nTrs.length; i++){
        var rowData=oTable.fnGetData(nTrs[i]);
        if(rowData[j]==primaryKey){
            return rowData;     
        }
    }
    return null;
}
</script>
